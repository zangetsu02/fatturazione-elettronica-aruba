{
  "name": "@fatturazione-elettronica-aruba/xml-builder",
  "version": "0.1.0",
  "description": "XML builder for FatturaPA electronic invoices",
  "type": "module",
  "main": "./dist/index.cjs",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "import": {
        "types": "./dist/index.d.ts",
        "default": "./dist/index.js"
      },
      "require": {
        "types": "./dist/index.d.cts",
        "default": "./dist/index.cjs"
      }
    }
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsup",
    "dev": "tsup --watch",
    "test": "vitest run",
    "test:watch": "vitest",
    "typecheck": "tsc --noEmit",
    "lint": "eslint src/",
    "clean": "rm -rf dist"
  },
  "dependencies": {},
  "devDependencies": {
    "@fatturazione-elettronica-aruba/typescript-config": "workspace:*",
    "tsup": "^8.0.0",
    "typescript": "^5.3.0",
    "vitest": "^2.1.0"
  },
  "keywords": [
    "fattura",
    "elettronica",
    "xml",
    "fatturapa",
    "sdi",
    "italia",
    "invoice"
  ],
  "author": "",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/zangetsu02/fatturazione-aruba",
    "directory": "packages/xml-builder"
  }
}
